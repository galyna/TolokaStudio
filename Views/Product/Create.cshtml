@model SumkaWeb.Models.ProductCreateModel
@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   <script src="@Url.Content("~/Scripts/sumkaScripts/create_product.js")" type="text/javascript"></script>
<div class="container">
   
      
        @using (Html.BeginForm())
        {
            <fieldset>
            <div class="row">
                <div class="span8">
                    <a href="#">
                        <div class="box_main_item">
                            <div class="box_main_item_img">
                                <div class="box_main_item_img_bg">
                                    <span>Назва</span>
                                </div>
                                <img src="/Content/img/box_main_item_img2.png" alt="img_box" />
                            </div>
                            <div class="box_main_item_text">
                                <h3>
                                    Назва</h3>
                                <span>Ціна</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="span6">
                    @Html.HiddenFor(model => model.StoreID)          
                        @Html.LabelFor(model => model.Name)                
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "required" })
             
                        @Html.Label("Ціна")              
                        @Html.EditorFor(model => model.Price, new { @class = "storecreatefield" })
                        @Html.ValidationMessageFor(model => model.Price, null, new { @class = "required" })
                
                        @Html.EditorFor(model => model.ImagePath)
                     
                  
                </div>
                <div class="span10">
                    <iframe id="templatesrc" name="templatesrc" src="/Store/ImageUpload" frameborder="0" style="float: left;
                        width: 400px; height: 320px"></iframe>
                          @Html.ValidationMessageFor(model => model.ImagePath, null, new { @class = "required" })
                </div>
            </div>
            <div class="row">
                <div class="span24">
                    <input type="submit" value="Create" />
                </div>
            </div>
        </fieldset>
        }
        <div>
            @Html.ActionLink("Повернутись до списку", "Index")
        </div>
   
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
        $('#templatesrc').load(function () {
            ProductCreator.init();
        });

    });
    
//]]>
</script>
