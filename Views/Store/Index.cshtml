@model TolokaStudio.Models.StoreIndexModel
@using ViewRes.Home
@using ViewRes.Store
<script src="@Url.Content("~/Content/js/employee_edit.js")" type="text/javascript"></script>
<style>
    body
    {
        font-size: 62.5%;
    }
    label, input
    {
        display: block;
    }
    input.text
    {
        margin-bottom: 12px;
        width: 95%;
        padding: .4em;
    }
    fieldset
    {
        padding: 0;
        border: 0;
        margin-top: 25px;
    }
    h1
    {
        font-size: 1.2em;
        margin: .6em 0;
    }
    div#users-contain
    {
        width: 350px;
        margin: 20px 0;
    }
    div#users-contain table
    {
        margin: 1em 0;
        border-collapse: collapse;
        width: 100%;
    }
    div#users-contain table td, div#users-contain table th
    {
        border: 1px solid #eee;
        padding: .6em 10px;
        text-align: left;
    }
    .ui-dialog .ui-state-error
    {
        padding: .3em;
    }
    .validateTips
    {
        border: 1px solid transparent;
        padding: 0.3em;
    }
</style>
<script src="/Content/js/admin.js"></script>
<div class="container">
    @foreach (var item in Model.Users)
    {
        <div class="row">
            <div class="span10">
                @Html.Raw(item.UserName)
                @if (item.Role.IsAdmin)
                { @Html.Raw("в ролі Aдмін ") }
                @if (item.Role.IsAuthor)
                { @Html.Raw("в ролі Автор ") }
            </div>
            <div class="span4 offset2">
                @Html.ActionLink("Дозволити роль Автор", "SetAsAuthor", new { id = item.Id })
                @Html.ActionLink("Дозволити роль Aдмін", "SetAsAdmin", new { id = item.Id })
            </div>
        </div>
                   
    }
    <div class="row">
        @Html.ActionLink(Store.Create_Store, "Create")
    </div>
    @foreach (var item in Model.Stores)
    { 
        <div class="row">
            @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.HtmlBanner))
            <div class="span2 offset1">
                @Html.ActionLink(Home.Edit, "Edit", new { id = item.Id })
                @Html.ActionLink(Home.Delete, "Delete", new { id = item.Id })
            </div>
        </div>
    }
    @foreach (var item in Model.Employees)
    {
        <div class="row">
            @if (item.HtmlBannerEdit != null)
            {
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.HtmlBannerEdit))

                <div class="span4">
                    @Html.ActionLink(@Store.Delete_Employee, "Delete", "Employee", new { Id = item.Id }, null)
                </div>
            }
        </div>                
    }
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
        Admin.init();
    });
//]]>
</script>
