@model  TolokaStudio.Models.StoreEditModel
@using ViewRes.Home
@using ViewRes.Store
@{
    ViewBag.Title = @Store.Edit_Store;
}
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/sumkaScripts/create_store.js")" type="text/javascript"></script>
<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {
   
            @Html.ValidationSummary(true)
            <fieldset>
                @Html.HiddenFor(model => model.Id)
                <div class="row store">
                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.HtmlBanner))
                    <div class="span6">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "required" })
                        @Html.Label("Короткий опис")
                        @Html.EditorFor(model => model.Description, new { @class = "storecreatefield" })
                        @Html.ValidationMessageFor(model => model.Description, null, new { @class = "required" })
                        @Html.HiddenFor(model => model.ImagePath)
                    </div>
                    <div class="span10">
                        <iframe id="templatesrc" name="templatesrc" src="/Store/ImageUpload" frameborder="0"
                            style="float: left; width: 400px; height: 320px"></iframe>
                    </div>
                </div>
                @foreach (var item in Model.Products)
                {
                    <div class="row">
                        @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.HtmlBanner))
                        <div class="span4 offset1">
                            @Html.ActionLink(@Store.Edit_Product, "EditProduct", new { id = item.Id })
                            @Html.ActionLink(@Store.Delete_Product, "DeleteProduct", new { id = item.Id })
                        </div>
                    </div>
                   
                }
                @foreach (var item in Model.Staff)
                {
                    <div class="row">
                        @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.HtmlBanner))
                        <div class="span4 offset1">
                            @Html.ActionLink(@Store.Edit_Employee, "EditEmployee", new { id = item.Id })
                            @Html.ActionLink(@Store.Delete_Employee, "DeleteEmployee", new { id = item.Id })
                        </div>
                    </div>
                   
                }
                <p>
                    @if (Model.Staff.Count > 0)
                    {
                        @Html.ActionLink(@Store.Add_Product, "AddProduct", new { id = Model.Id })
                    }
                </p>
                <p>
                    @Html.ActionLink(@Store.Add_Employee, "AddEmployee", new { id = Model.Id })
                </p>
                <p>
                    <input type="submit" value="@Home.Save" />
                </p>
            </fieldset>      
        }
        <div>
            @Html.ActionLink(Home.BackToList, "Index")
        </div>
    </div>
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
        $('#templatesrc').load(function () {
            StoreCreator.init();
        });

    });
    
//]]>
</script>
