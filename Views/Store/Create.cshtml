@model SumkaWeb.Models.StoreCreateModel
@{
    ViewBag.Title = "Створення розділ";
}
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/sumkaScripts/create_store.js")" type="text/javascript"></script>
<div class="container">
    <h2>
        Створити розділ</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
         
        <fieldset>
            <div class="row">
                <div class="span8">
                    <a href="#">
                        <div class="box_main_item">
                            <div class="box_main_item_img">
                                <div class="box_main_item_img_bg">
                                    <span>Назва</span>
                                </div>
                               <img src="/Content/img/box_main_item_img2.png" alt="img_box" />
                            </div>
                            <div class="box_main_item_text">
                                <h3>
                                    Назва</h3>
                                <span>Короткий опис</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="span6">
                   
                        @Html.LabelFor(model => model.Name)                
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "required" })
             
                        @Html.Label("Короткий опис")              
                        @Html.EditorFor(model => model.Description, new { @class = "storecreatefield" })
                        @Html.ValidationMessageFor(model => model.Description, null, new { @class = "required" })
                
                        @Html.EditorFor(model => model.ImagePath)
                     
                  
                </div>
                <div class="span10">
                    <iframe id="templatesrc" name="templatesrc" src="/Store/ImageUpload" frameborder="0" style="float: left;
                        width: 400px; height: 320px"></iframe>
                          @Html.ValidationMessageFor(model => model.ImagePath, null, new { @class = "required" })
                </div>
            </div>
            <div class="row">
                <div class="span24">
                    <input type="submit" value="Create" />
                </div>
            </div>
        </fieldset>
    }
    <br />
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
        $('#templatesrc').load(function () {
            StoreCreator.init();
        });
       
    });
    
//]]>
</script>
