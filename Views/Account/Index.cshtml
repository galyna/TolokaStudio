@model TolokaStudio.Models.BascetModel
@using ViewRes.Home
<div class="container">
    @if (Model.Message != null)
    {
        <div class="row">
            <h5>
                @Html.Raw(Model.Message)
            </h5>
        </div> 
    }
    else if (Model != null && Model.Orders != null && Model.Orders.Count > 0)
    {
       <div class="row">
            <h5>
                Відправте інформацію про замовлення Автору натиснувши 'Замовити'
                Видаліть товар з кошика натиснувши 'Видалити'
            </h5>
        </div>     
    }
    else
    {
      <div class="row">
            <h5>
                Додайте товари в кошик через пункт меню Товари
            </h5>
        </div>   
    }
    @if (Model != null && Model.Orders != null && Model.Orders.Count > 0)
    {
        foreach (var item in Model.Orders)
        {   
        <div class="row">
            <div class="span9">
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Product.HtmlBannerOrderedNot))
            </div>
            <div class="span7">
        Введідь  адресу вашої пошти  Введідь  адресу вашої пошти  @Html.TextAreaFor(i=>i.User.Email)
              @Html.TextAreaFor(i=>i.Comments)
            </div>
            <div class="span5">
                <div class='span2 offset3'>
             
                     
                       @Html.ActionLink("Замовити", "MakeOrder", "Order", new { id = item.Id, comments = Model.Comments, email = Model.User.Email }, null)
                </div>
                <div class='span2 offset3'>
                    @Html.ActionLink("Видалити", "Delete", "Order", new { id = item.Id }, null)
                </div>
            </div>
        </div> 
        }

    }
</div>
