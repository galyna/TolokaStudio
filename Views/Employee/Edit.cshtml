@model TolokaStudio.Models.EmployeeEditModel
@using ViewRes.Home
@using ViewRes.Store
 <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
    <style>
        body { font-size: 62.5%; }
        label, input { display:block; }
        input.text { margin-bottom:12px; width:95%; padding: .4em; }
        fieldset { padding:0; border:0; margin-top:25px; }
        h1 { font-size: 1.2em; margin: .6em 0; }
        div#users-contain { width: 350px; margin: 20px 0; }
        div#users-contain table { margin: 1em 0; border-collapse: collapse; width: 100%; }
        div#users-contain table td, div#users-contain table th { border: 1px solid #eee; padding: .6em 10px; text-align: left; }
        .ui-dialog .ui-state-error { padding: .3em; }
        .validateTips { border: 1px solid transparent; padding: 0.3em; }
    </style>


<script src="@Url.Content("~/Content/js/employee_edit.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <div class="row employeeHtmlBanner">
                <div class="span8">
                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.HtmlBannerEdit))
                </div>
              
                <div class="span8">
                    @Html.LabelFor(model => model.FirstName)
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "required" })
                    @Html.LabelFor(model => model.LastName)
                    @Html.EditorFor(model => model.LastName, new { @class = "storecreatefield" })
                    @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "required" })
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { @class = "storecreatefield" })
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "required" })
                    @Html.HiddenFor(model => model.ImagePath)
                    @Html.HiddenFor(model => model.Id)
                   
                </div>
                 <div class="span8">
                    <iframe id="templatesrc" name="templatesrc" src="/Store/ImageUpload" frameborder="0"
                        style="float: left; width: 400px; height: 320px"></iframe>
                    @Html.ValidationMessageFor(model => model.ImagePath, null, new { @class = "required" })
                </div>
                </div>
            
                <div class="row">
                  
                    <br />
                    @if (Model.Products != null)
                    {
                        foreach (var item in Model.Products)
                        {
                     
                            @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.HtmlBannerEdit))
                      
                   
                        }
                    }
                </div>
                 <div class="row">
                   <input type="submit" value="@Home.Save" />
                </div>
        </fieldset>
    }
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
     $('#templatesrc').load(function () {       
            Employee.init();       
    });
    });
//]]>
</script>
